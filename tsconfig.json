{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES5",
    "lib": ["DOM", "ESNext"],
    "module": "NodeNext",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
